<div class='nested-fields col-6'>
  <%= f.hidden_field :_destroy %>
  <div class='row align-items-end'>
    <div class='col-8 text-light'>
      <%= f.label t('phone')%>
      <%= f.text_field :phone, class:'phone form-control'%>
    </div>
    <div class='col-4'>
      <%= link_to t('remove'), '#', class: 'remove_fields btn text-light border' %>
    </div>
  </div>
</div>