<div class='nested-fields' id='nested-fields'>
  <div class='col-6'>
    <%= f.hidden_field :_destroy %>
    <div class='row align-items-end' id='form-phones'>
      <div class='col-8 text-light' id='div-phones'>
        <%= f.label t('phone'), id: 'label-phone'%>
        <%= f.text_field :phone, class:'phone form-control', id: 'input-phone'%>
      </div>
      <div class='col-4'>
        <%= link_to t('remove'), '#', class: 'btn text-light border', id: 'remove_fields'%>
      </div>
    </div>
  </div>
</div>