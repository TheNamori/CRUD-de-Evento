<%= form_for(@guest) do |f| %>
<% if @guest.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@guest.errors.count, "error") %> prohibited this guest from being saved:</h2>

  <ul>
    <% @guest.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :age %>
  <%= f.number_field :age %>
</div>
<div class="field">
  <%= f.label :gender %>
  <%= f.collection_select(:gender_id, @gender_selection, :id, 
          :name, {}, class: "form-control form-control-sm", id:'select-gender-#{:name}')%>

</div>
<div class="field">
  <%= f.label :category %>
  <%= f.collection_select(:category_id, @category_selection, :id, 
          :name, {}, class: "form-control form-control-sm", id:'select-category-#{:name}')%>
</div>
<div class="field">
  <%= f.label :street %>
  <%= f.text_field :street %>
</div>
<div class="field">
  <%= f.label :neighborhood %>
  <%= f.text_field :neighborhood %>
</div>
<div class="field">
  <%= f.label :cep %>
  <%= f.text_field :cep, class: 'cep'%>
</div>
<div class="field">
  <%= f.label :street_number %>
  <%= f.number_field :street_number %>
</div>
<div class="field">
  <%= f.label :state %>
  <%= f.text_field :state, class: 'phone'%>
</div>

<div>
  <%= f.fields_for :phones do |phone_form| %>
  <%= render "phone_fields", f: phone_form %>
  <% end %>
  <%= link_to_add_fields "Add phone", f, :phones %>
</div>


<div class="actions">
  <%= f.submit class: 'btn border' %>
</div>
<% end %>