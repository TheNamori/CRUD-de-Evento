<p id="notice"><%= notice %></p>

<h1>Listing Guests</h1>

<table>
  <thead>
    <tr>
      <th><%= @guests.model.human_attribute_name("name") %></th>
      <th><%= @guests.model.human_attribute_name("category") %></th>
      <th><%= @guests.model.human_attribute_name("state") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
    <tr>
      <td><%= guest.name %></td>
      <td><%= p guest.category.name %></td>
      <td><%= guest.state %></td>
      <td><%= link_to 'Show', guest %></td>
      <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
      <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

