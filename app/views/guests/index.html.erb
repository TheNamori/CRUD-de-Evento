<% unless notice.? %>
<p id='notice' , class='alert alert-danger'><%= notice %></p>
<% end %>

<h1><%= t('list_of') + @guests.model_name.human(count: @guests.count) %></h1>

<table>
  <thead>
    <tr>
      <th><%= @guests.model.human_attribute_name('name') %></th>
      <th><%= @guests.model.human_attribute_name('category') %></th>
      <th><%= @guests.model.human_attribute_name('state') %></th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
    <tr>
      <td><%= guest.name %></td>
      <td><%= p guest.category.name %></td>
      <td><%= guest.state %></td>
      <td><%= link_to t('show'), guest, class: 'btn border' %></td>
      <td><%= link_to t('edit'), edit_guest_path(guest), class: 'btn border' %></td>
      <td><%= link_to t('destroy'), guest, method: :delete, data: { confirm: t('sure?', guest: guest.name) }, class: 'btn border' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_guest'), new_guest_path, class: 'btn border'  %>